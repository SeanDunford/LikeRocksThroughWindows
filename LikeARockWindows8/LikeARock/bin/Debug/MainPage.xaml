<Page
    x:Class="LikeARock.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LikeARock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' Name="btnLatestSol" Content="Latest Sol" HorizontalAlignment="Left" Margin="31,176,0,0" VerticalAlignment="Top" Width="120"                            />
        <Button Content="Favorites" HorizontalAlignment="Left" Margin="31,242,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="About" HorizontalAlignment="Left" Margin="31,311,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:ConnectionId='2' ItemsSource="{Binding Mode=TwoWay}" SelectedValue="{Binding Sol}" Name="SolDaySelect" HorizontalAlignment="Left" Margin="31,414,0,0" VerticalAlignment="Top" Width="120"                                                 >
  
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="48,394,0,0" TextWrapping="Wrap" Text="Select A Sol Day" VerticalAlignment="Top" Height="32" Width="120"/>
        <GridView x:ConnectionId='3' ItemsSource="{Binding}" Name="SolGridView" HorizontalAlignment="Left" Margin="239,176,0,0" VerticalAlignment="Top" Width="1011" Height="411"                                                 >
            <GridView.ItemTemplate>
                <DataTemplate>
            <StackPanel Orientation="Vertical">
                <Image Source="{Binding UrlList}" Height="60" Width="60" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>

